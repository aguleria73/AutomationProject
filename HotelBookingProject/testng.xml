<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Booking Suite">
  <test  name="Creating booking -- default Discount">
  <parameter name="action" value="deafultdiscount"> </parameter>
    <classes>
      <class name="testcase.bookingSearch"> 
      <methods>
      <include name="searchHotel"></include>
      <include name="selectingHotel"></include>
      <include name="enterGustInfo"></include>
      </methods>
      </class>
      <class name="testcase.PaymentManager"> 
		<methods>
		<include name="applyDiscount"></include>
		<include name="makePayment"></include>
		</methods>      
      </class>
      <class name="testcase.CustomerCommunication"> 
      <methods>
      <include name="checkingEmail"></include>
      </methods>
      </class>
    </classes>
  </test> <!-- Test -->
  
   <test  name="Creating booking Test -- no Discount">
   <parameter name="action" value="nodiscount"></parameter>
    <classes>
      <class name="testcase.bookingSearch"> 
      <methods>
      <include name="searchHotel"></include>
      <include name="selectingHotel"></include>
      <include name="enterGustInfo"></include>
      </methods>
      </class>
      <class name="testcase.PaymentManager"> 
		<methods>
		<include name="makePayment"></include>
		</methods>      
      </class>
      <class name="testcase.CustomerCommunication"> 
      <methods>
      <include name="checkingEmail"></include>
      </methods>
      </class>
    </classes>
  </test> <!-- Test -->
  
   <test  name="Creating booking Test -- apply Discount -- Pay@hotel">
   <parameter name="action" value="payathotel"></parameter>
    <classes>
      <class name="testcase.bookingSearch"> 
      <methods>
      <include name="searchHotel"></include>
      <include name="selectingHotel"></include>
      <include name="enterGustInfo"></include>
      </methods>
      </class>
     <class name="testcase.PaymentManager">  
		<methods>
		<include name="applyDiscount"></include>
		<include name="makePayment"></include>
		</methods>      
      </class>

      <class name="testcase.CustomerCommunication">
      <methods>
      <include name="checkingEmail"></include>
      </methods>
      </class>
    </classes>
  </test> <!-- Test -->
</suite> <!-- Suite -->
